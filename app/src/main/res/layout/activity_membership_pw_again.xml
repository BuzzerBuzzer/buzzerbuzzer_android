<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pwrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.movements.and.buzzerbuzzer.Membership_pw_again">


    <TextView
        android:id="@+id/tv_id_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="아이디 / 비밀번호"
        android:textColor="@color/colorMain"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/o3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_id_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_id_pw"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/o3"
        android:src="@drawable/custom_indicator_focus" />

    <ImageView
        android:id="@+id/o1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_id_pw"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/o2"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_id_pw"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/o3"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o5"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_id_pw"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/o4"
        android:src="@drawable/custom_indicator_dimmed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="비밀번호를 재입력해주세요."
            android:textColor="@color/grey02"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pw_tx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/Black"
                android:textCursorDrawable="@drawable/custom_cursor_color"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/btn_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호가 맞지 않습니다."
            android:textColor="@color/alert"
            android:textSize="11dp"
            android:visibility="visible" />


    </LinearLayout>

    <ImageView
        android:id="@+id/nextbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/signup_next_dim" />

</RelativeLayout>
