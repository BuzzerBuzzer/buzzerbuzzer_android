    <ImageView
        android:id="@+id/user_pic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center|top"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="44dp">


            <ImageView
                android:id="@+id/showpicbtn"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_thumb"
                />

            <Button
                android:id="@+id/total_text"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/profile_radio_count"
                android:layout_alignParentRight="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:text="0"
                android:textColor="@color/White"
                android:textSize="8dp"/>

            <ImageView
                android:id="@+id/profilegallery"
                android:layout_marginTop="11dp"
                android:layout_marginRight="11dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:src="@null"
                />

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:background="@color/zxing_transparent"
                android:src="@drawable/btn_exit"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="@color/White"
                android:layout_above="@id/roundingbox"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/roundingbox"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/friend_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/roundingbox"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="@color/grey04"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="30dp"
                android:textColor="@color/Black"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/roundingbox"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignTop="@+id/roundingbox"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ico_heart" />

            <TextView
                android:id="@+id/buzzer_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/roundingbox"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"
                android:text="0"
                android:textSize="11dp"
                android:textColor="@color/Black"
                />


            <TextView
                android:id="@+id/state_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/id"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textColor="@color/grey02"
                android:lines="2"
                android:text=""
                android:textSize="14dp" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="adsf" />-->

            <TextView
                android:id="@+id/following_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="20dp"
                />




            <TextView
                android:id="@+id/age_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/state_msg"
                android:text="팔로워"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/grey02"
                android:textSize="14dp" />

            <Button
                android:id="@+id/big_friend_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/r_box5_press"
                android:textSize="16dp"
                android:textColor="@color/White"
                android:text="팔로우"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/following_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

                <Button
                    android:id="@+id/chat_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/largebutton_sub_dim"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/btn_chat"
                    android:paddingLeft="35dp"
                    android:drawablePadding="-30dp"
                    android:textColor="@color/colorMain"
                    android:text="채팅하기" />

                <Button
                    android:id="@+id/call_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/largebutton_sub_dim"
                    android:paddingLeft="35dp"
                    android:drawablePadding="-30dp"
                    android:drawableLeft="@drawable/btn_call_dim"
                    android:textSize="16dp"
                    android:textColor="@color/grey04"
                    android:text="전화하기" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>





