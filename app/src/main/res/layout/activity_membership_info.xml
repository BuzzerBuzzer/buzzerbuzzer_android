<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:textColor="@color/colorMain"
            android:textSize="12dp"
            android:text="회원가입" />

        <ImageView
            android:id="@+id/o3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_dimmed"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/o2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_dimmed"
            android:layout_toLeftOf="@+id/o3"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/o1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_focus"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/o2"
            />
        <ImageView
            android:id="@+id/o4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_dimmed"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/o3"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/o5"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_dimmed"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@+id/o4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/o6"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/custom_indicator_dimmed"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@+id/o4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:textSize="30dp"
            android:text="" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:text="" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/nextbtn"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:text="" />



        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/signup_next" />


    </RelativeLayout>
</RelativeLayout>
