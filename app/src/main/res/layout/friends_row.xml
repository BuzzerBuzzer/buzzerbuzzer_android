<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/user_pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/nopic__s_m"
                android:scaleType="centerCrop"


                />

            <!--<ImageView-->
            <!--android:id="@+id/gauge"-->
            <!--android:layout_width="44dp"-->
            <!--android:layout_height="44dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_centerVertical="true"-->


            <!--/>-->
            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">

                <com.timqi.sectorprogressview.ColorfulRingProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/crpv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bgColor="@color/White"
                    app:fgColorEnd="@color/colorMain"
                    app:fgColorStart="@color/colorMain"
                    app:percent="100"
                    app:startAngle="0"
                    app:strokeWidth="22dp"
                    />


            </FrameLayout>

            <!--app:fgColorEnd="#204A7A"-->
            <!--app:fgColorStart="#C9C3A7"-->
            <!--app:fgColorEnd="#ff4800"-->
            <!--app:fgColorStart="#ffe400"-->
            <!--app:fgColorEnd="#9900CC"-->
            <!--app:fgColorStart="#FF00FF"-->
            <!--app:fgColorEnd="#ff4800"-->
            <!--app:fgColorStart="#ffe400"-->
            <ImageView
                android:id="@+id/img_best"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"


                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="39.91">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/age_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="id"
                    android:textSize="14dp"
                    android:textColor="@color/Black" />


            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/sts_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_box_xhdpi_9"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="message"
                android:textSize="10dp"
                android:textColor="@color/grey02"
                android:visibility="invisible" />
            <!--android:background="@drawable/msg_new"-->
        </RelativeLayout>
            <TextView
                android:id="@+id/grey"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity=""
                android:layout_toLeftOf="@+id/red"
                android:background="@color/grey02"
                android:clickable="true"
                android:gravity="center"
                android:text="차단"
                android:textColor="@color/White"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/red"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/alert"
                android:clickable="true"
                android:gravity="center"
                android:text="삭제"
                android:textColor="@color/White"
                android:textSize="14dp"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>