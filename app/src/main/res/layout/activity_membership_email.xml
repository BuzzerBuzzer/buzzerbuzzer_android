<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.movements.and.buzzerbuzzer.Membership_email">

    <TextView
        android:id="@+id/tv_email_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="이메일등록"
        android:textColor="@color/colorMain"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/o3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_email_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_email_main"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/o3"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_email_main"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/o2"
        android:src="@drawable/custom_indicator_dimmed" />

    <ImageView
        android:id="@+id/o4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_email_main"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/o3"
        android:src="@drawable/custom_indicator_focus" />

    <ImageView
        android:id="@+id/o5"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_email_main"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/o4"
        android:src="@drawable/custom_indicator_dimmed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="이메일 주소를 입력해주세요."
            android:textColor="@color/grey02"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/email_tx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:textColor="@color/Black"
            android:textCursorDrawable="@drawable/custom_cursor_color"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/pwrule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/joininfo"
            android:textColor="@color/grey04"
            android:textSize="11dp" />

        <Button
            android:id="@+id/chk_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/largebutton_sub"
            android:text="중복확인"
            android:textColor="@color/colorMain"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="중복된 이메일입니다."
            android:textColor="@color/alert"
            android:textSize="11dp"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nextbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/signup_next_dim" />

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="90dp"
        android:gravity="right"
        android:text="다음 단계"
        android:textColor="@color/grey02"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/next2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="90dp"
        android:gravity="right"
        android:text="성별 선택"
        android:textColor="@color/colorMain"
        android:textSize="15dp" />


</RelativeLayout>
