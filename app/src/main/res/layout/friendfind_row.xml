<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/user_pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/nopic__s_m"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="39.91">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/age_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="id"
                    android:textSize="14dp"
                    android:textColor="@color/Black" />


            </RelativeLayout>

            <TextView
                android:id="@+id/sts_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_box_xhdpi_9"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="message"
                android:textSize="14dp"
                android:textColor="@color/Black"
                android:visibility="invisible" />
            <!--android:background="@drawable/msg_new"-->


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>