<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.movements.and.buzzerbuzzer.Membership_gender">

    <TextView
        android:id="@+id/tv_gender_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorMain"
        android:textSize="12dp"
        android:text="성별 선택" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        app:srcCompat="@drawable/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/o3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/custom_indicator_dimmed"
        android:layout_below="@+id/tv_gender_main"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/o2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/custom_indicator_dimmed"
        android:layout_toLeftOf="@+id/o3"
        android:layout_below="@+id/tv_gender_main"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/o1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/custom_indicator_dimmed"
        android:layout_below="@+id/tv_gender_main"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/o2"
        />
    <ImageView
        android:id="@+id/o4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/custom_indicator_dimmed"
        android:layout_below="@+id/tv_gender_main"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/o3"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:id="@+id/o5"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/custom_indicator_focus"
        android:layout_below="@+id/tv_gender_main"
        android:layout_toRightOf="@+id/o4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자신의 성별을 선택해주세요."
            android:textSize="14dp"
            android:textColor="@color/grey02"
            android:layout_marginTop="68dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="190dp"
            android:text="남자"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            />

        <TextView
            android:id="@+id/woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="여자"
            android:layout_marginTop="100dp"
            android:textSize="30dp"
            android:textColor="@color/grey02"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/nextbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/signup_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/complete_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nextbtn"
        android:gravity="right"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="90dp"
        android:layout_alignParentBottom="true"
        android:text="회원가입 완료"
        android:textColor="@color/colorMain"
        android:textSize="14dp"
        />

</RelativeLayout>
