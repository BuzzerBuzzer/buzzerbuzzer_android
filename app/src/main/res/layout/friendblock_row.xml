<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/edittext_singleline2"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/user_pic2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop" />

        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->


        <TextView
            android:id="@+id/age_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/user_pic2"
            android:text="id"
            android:textSize="14dp"
            android:fontFamily="n"
            android:textColor="@color/Black"/>


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:track="@drawable/ico_toggle_track_selector_red"
            android:thumb="@drawable/ico_toggle_thumb"
            android:layout_marginRight="20dp" />

    </RelativeLayout>
</LinearLayout>